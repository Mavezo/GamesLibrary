@using Microsoft.AspNetCore.Identity;
@model IdentityRole;

@{
	ViewData["Title"] = "New Role";
}


<form method="post" asp-action="AddRole" >
	<h4>Add new role</h4> <br />
	<div>
		<label asp-for="Name"></label><br />
		<input asp-for="Name" />
		<span asp-validation-for="Name"></span>
	</div>
	<div>
		<input type="submit" value="Add" class="mt-4"/>
	</div>
</form>