@using GamesLibrary.Areas.Admin.Models.User;
@using Microsoft.AspNetCore.Identity;
@model AddUserViewModel;

@{
	ViewData["Title"] = "New User";
}

<h3> New User</h3>

<form method="post">
	<div asp-validation-summary="ModelOnly"></div>
	<input asp-for="AllRoles" type="hidden"/>
	<div>
		<label asp-for="UserName"></label><br />
		<input asp-for="UserName" />
		<span asp-validation-for="UserName"></span>
	</div>
	<div>
		<label asp-for="Email"></label><br />
		<input asp-for="Email" />
		<span asp-validation-for="Email"></span>
	</div>
	<div>
		<label asp-for="Password"></label><br />
		<input asp-for="Password" />
		<span asp-validation-for="Password"></span>
	</div>
	<div>
		<label asp-for="RepeatPassword"></label><br />
		<input asp-for="RepeatPassword"/>
		<span asp-validation-for="RepeatPassword"></span>
	</div>
	<div class="mt-3">
		<label asp-for="UserRoles"></label><br />
		<select asp-for="UserRoles" multiple class="form-select" style="width: 200px;"
		asp-items="new SelectList(Model.AllRoles, nameof(IdentityRole.Name), nameof(IdentityRole.Name))">
		</select>
	</div>
	<div>
		<input type="submit" value="Add" class="btn btn-success mt-4"/>
	</div>



</form>

