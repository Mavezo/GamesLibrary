@model GamesLibrary.Models.Account.LoginViewModel;
@{
	ViewData["Title"] = "Login";

}

<form method="post" asp-action="Login" asp-controller="Account" asp-route-returnUrl="@Model.ReturnURL">
	<div>
		<label asp-for="Nickname"></label><br />
		<input asp-for="Nickname" />
		<span asp-validation-for="Nickname"></span>
	</div>
	<div>
		<label asp-for="Password"></label> <br />
		<input asp-for="Password" />
		<span asp-validation-for="Password"></span>
	</div>
	<div class="mt-2">
		<label asp-for="RememberMe"></label>
		<input asp-for="RememberMe" style="vertical-align: -2px;" />
	</div>
	<div class="mt-3">
		<input type="submit" value="Enter"/>
	</div>
</form>
